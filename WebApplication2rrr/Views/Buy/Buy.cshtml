@model WebApplication2rrr.Models.Phone
@{
    ViewData["Title"] = "Телефон";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Магазин смартфонов</title>
    <link rel="stylesheet" href="~/css//site.css">
    <script src="~/js/site.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Оформление заказа</h1>
        <div class="form-group">
            <label class="neon-text">Смартфон: @Model.Name</label>
        </div>
        <div class="form-group">
            <label class="neon-text">Цена: @Model.Price</label>
        </div>
        <form method="post">
            <div class="form-group">
            <input type="hidden" value="@ViewBag.PhoneId" name="PhoneID" />
            </div>

            <div class="form-group">
            <label class="neon-text">Имя:</label>
            <input type="text" name="name" /> 
            </div>

            <div class="form-group">
            <label class="neon-text">Телефон:</label>
            <input type="text" name="phone" />
            </div>

            <div class="form-group">
            <label class="neon-text">Адрес:</label>
            <input type="text" name="adress" />
            </div>

            <div class="form-group">
            <input type="submit" class="button" name="btn" value="Оформить заказ" />
            </div>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <script>
            alert('@Html.Raw(ViewBag.SuccessMessage)');

        </script>
    }
</body>
</html>


