@model WebApplication2rrr.Models.User


<div>
    <h1>Login</h1>

    @using (Html.BeginForm("LoginUser", "Login", FormMethod.Post))
    {
        <div class="form-group">
            <label class="neon-text">Никнейм</label>
            @Html.TextBoxFor(m => m.UserName, new { id = "UserName" })
        </div>

        <div class="form-group">
            <label class="neon-text">Пароль</label>
            @Html.PasswordFor(m => m.Password, new { id = "Password" })
        </div>

        <div class="form-group">
            <input type="submit" value="Login" />
        </div>
    }
</div>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script>
        alert('@Html.Raw(ViewBag.ErrorMessage)');
    </script>
}
