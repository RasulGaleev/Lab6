@model WebApplication2rrr.Models.User

<div>
    <h1>Registration</h1>
    @using (Html.BeginForm("RegisterUser", "Register", FormMethod.Post))
    {
        <div class="form-group">
            <label class="neon-text">Никнейм</label>
             @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="neon-text">Пароль</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="neon-text">Имя</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="neon-text">Пол</label>
            <br />
            <label class="neon-text">
                @Html.RadioButtonFor(m => m.Sex, true) Мужской
            </label>
            <br />
            <label class="neon-text">
                @Html.RadioButtonFor(m => m.Sex, false) Женский
            </label>
        </div>
        <div class="form-group">
            <label class="neon-text">Номер телефона</label>
            @Html.TextBoxFor(m => m.NumberTelephone, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>
    }
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script>
        alert('@Html.Raw(ViewBag.ErrorMessage)');
    </script>
}

