@model IEnumerable<WebApplication2rrr.Models.Phone>

@{
    ViewData["Title"] = "Список смартфонов";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Магазин смартфонов</title>
    <link rel="stylesheet" href="~/css//site.css">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
</head>
<body>
    <h1>Смартфоны</h1>
    <table>
        <tr>
            <th>Модель</th>
            <th>Производитель</th>
            <th>Цена</th>
            <th></th>
        </tr>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.Name</td>
                <td>@phone.Company</td>
                <td>@phone.Price</td>
                <td><a href="~/Buy/Buy/@phone.PhoneId" class="button">Купить</a></td>
            </tr>
        }
    </table>
</body>
</html>
